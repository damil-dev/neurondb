[Unit]
Description=NeuronDesktop API Server
Documentation=https://www.neurondb.ai/docs/neurondesktop
After=postgresql.service network.target
Requires=postgresql.service

[Service]
Type=simple
User=neurondb
Group=neurondb
WorkingDirectory=/opt/neurondb
ExecStart=/usr/local/bin/neurondesktop
EnvironmentFile=-/etc/neurondb/neurondesktop.env
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=neurondesktop-api

# Security settings
NoNewPrivileges=true
PrivateTmp=true

# Resource limits (adjust as needed)
LimitNOFILE=65536
MemoryLimit=512M
CPUQuota=200%

[Install]
WantedBy=multi-user.target


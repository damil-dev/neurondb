# PostgreSQL Client Authentication Configuration File
# Managed by Ansible

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             all                                     peer

# IPv4 local connections:
host    all             all             127.0.0.1/32            md5

# IPv6 local connections:
host    all             all             ::1/128                 md5

# Allow replication connections from localhost
local   replication     all                                     peer
host    replication     all             127.0.0.1/32            md5
host    replication     all             ::1/128                 md5

# NeuronDB database access
host    {{ neurondb_database_name | default('neurondb') }}     {{ neurondb_database_user | default('neurondb') }}             127.0.0.1/32            md5
host    {{ neurondb_database_name | default('neurondb') }}     {{ neurondb_database_user | default('neurondb') }}             ::1/128                 md5


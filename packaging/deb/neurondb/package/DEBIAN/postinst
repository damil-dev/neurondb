#!/bin/bash
set -e

# Post-installation script for NeuronDB extension

PG_VERSIONS=$(ls -1 /usr/lib/postgresql/ 2>/dev/null | grep -E '^[0-9]+$' || true)

if [ -z "$PG_VERSIONS" ]; then
    echo "Warning: No PostgreSQL versions found in /usr/lib/postgresql/"
    exit 0
fi

echo "NeuronDB extension installed successfully."
echo "To use NeuronDB, connect to your database and run:"
echo "  CREATE EXTENSION neurondb;"
echo ""
echo "Installed for PostgreSQL versions: $(echo $PG_VERSIONS | tr '\n' ' ')"

exit 0


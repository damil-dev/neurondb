{
  "dashboard": {
    "title": "NeuronDB / PostgreSQL",
    "tags": ["neurondb", "postgresql", "database"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Database Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [{
          "expr": "pg_stat_database_numbackends{datname=\"neurondb\"}",
          "legendFormat": "Active Connections"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Database Size",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [{
          "expr": "pg_database_size_bytes{datname=\"neurondb\"}",
          "legendFormat": "Database Size"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "Query Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [{
          "expr": "rate(pg_stat_database_xact_commit{datname=\"neurondb\"}[5m]) + rate(pg_stat_database_xact_rollback{datname=\"neurondb\"}[5m])",
          "legendFormat": "Queries/sec"
        }],
        "yaxes": [
          {"format": "reqps", "label": "Queries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Cache Hit Ratio",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [{
          "expr": "sum(rate(pg_stat_database_blks_hit{datname=\"neurondb\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{datname=\"neurondb\"}[5m])) + sum(rate(pg_stat_database_blks_read{datname=\"neurondb\"}[5m]))) * 100",
          "legendFormat": "Cache Hit Ratio"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Active Queries",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [{
          "expr": "pg_stat_activity_count{datname=\"neurondb\",state=\"active\"}",
          "format": "table",
          "instant": true
        }]
      },
      {
        "id": 6,
        "title": "Database Up",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "targets": [{
          "expr": "pg_up",
          "legendFormat": "Database Status"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Table Sizes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 16},
        "targets": [{
          "expr": "pg_stat_user_tables_size_bytes{schemaname=\"neurondb\"}",
          "legendFormat": "{{relname}}"
        }],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ]
      }
    ]
  }
}






